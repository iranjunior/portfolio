{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": [
        "airbnb"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "overrides": [{
        "files":["./src/**/*.stories.js"],
        "rules": {
            "import/no-extraneous-dependencies": "off",
            "react/jsx-filename-extension": "off"
        }
    }],
    "rules": {}
}